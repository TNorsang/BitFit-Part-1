<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailLayout"
    android:background="#2D363E"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/foodText"
        android:textColor="@color/white"

        android:layout_width="102dp"
        android:layout_height="38dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="148dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Food:"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/inputCalories"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/caloriesText"
        android:textColor="@color/white"

        android:layout_width="102dp"
        android:layout_height="38dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Calories:"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodText" />

    <EditText
        android:id="@+id/inputFood"
        android:layout_width="148dp"
        android:layout_height="56dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter food"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAA7A7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/foodText"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputCalories"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAA7A7"
        android:layout_width="148dp"
        android:layout_height="56dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter calories"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/caloriesText"
        app:layout_constraintTop_toBottomOf="@+id/inputFood" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record food data"
        android:textColorHint="#AAA7A7"
        android:backgroundTint="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputCalories"
        app:layout_constraintVertical_bias="0.609" />
</androidx.constraintlayout.widget.ConstraintLayout>